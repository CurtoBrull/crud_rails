<%= link_to "Home", "/courses/"%>
<%= form_with model: @course do |f| %>
  <div>
    <%= f.label 'Título: ' %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label 'Descripción: '%>
    <%= f.text_area :description, placeholder: 'Describe el curso' %>
  </div>
  <div>
    <%= f.label 'Visible: '%>
    <%= f.check_box :visible %>
  </div>
  <div>
    <%= f.label 'Publicado: '%>
    <%= f.check_box :published %>
  </div>
  <%= f.submit "Crear curso" %>
<% end %>
